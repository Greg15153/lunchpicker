{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CServer",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/cserver/LunchPicker.API/bin/Debug/netcoreapp3.1/LunchPicker.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/cserver/LunchPicker.API",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://+:5000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "App: Server",
      "cwd": "${workspaceFolder}/src/app",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "port": 9228,
      "sourceMaps": true,
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "a - development",
        "order": 4
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "cwd": "${workspaceFolder}/src/server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"],
      "port": 9229,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/src/server/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "a - development",
        "order": 5
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server: Jest Tests",
      "cwd": "${workspaceFolder}/src/server",
      "runtimeExecutable": "yarn",
      "port": 4364,
      "runtimeArgs": ["test:debug"],
      "console": "internalConsole",
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "Test",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node",
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "Utility",
        "order": 1
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "webRoot": "${workspaceFolder}/src/app",
      "port": 9222,
      "presentation": {
        "hidden": false,
        "group": "Utility",
        "order": 2
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "App: Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src/app",
      "presentation": {
        "hidden": false,
        "group": "b - App",
        "order": 2
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "App: Firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src/app",
      "presentation": {
        "hidden": false,
        "group": "b - App",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "All",
      "configurations": ["App: Server", "App: Chrome", "Server"],
      "presentation": {
        "hidden": false,
        "group": "a - development",
        "order": 1
      }
    }
  ]
}
