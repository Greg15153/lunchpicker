{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "App",
      "cwd": "${workspaceFolder}/src/app",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "port": 9228,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "env": {
        "NODE-OPTIONS": "--inspect=0.0.0.0:9228",
        "NODE_ENV": "development"
      },
      "timeout": 300000,
      "sourceMaps": true,
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "cwd": "${workspaceFolder}/src/server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"],
      "port": 9229,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/src/server/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server: Jest Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--config", "package.json", "--runInBand"],
      "runtimeArgs": ["--nolazy"],
      "console": "internalConsole",
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "Test",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "Utility",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "All",
      "configurations": ["App", "Server"],
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 1
      }
    }
  ]
}
