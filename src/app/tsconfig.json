{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable"],
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "ssr.config.js", ".ssr"]
}
