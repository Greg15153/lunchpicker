{
  "name": "server",
  "version": "1.0.0",
  "description": "Pick Lunch",
  "main": "server.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "test": "jest"
  },
  "dependencies": {
    "apollo-server-koa": "^2.9.15",
    "dotenv": "^8.2.0",
    "express": "^4.16.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "inversify": "^5.0.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.17.0",
    "pg-pool": "^2.0.10",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.1.2",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^13.1.4",
    "@types/pg": "^7.14.1",
    "@types/pg-pool": "^2.0.2",
    "@types/uuid": "^3.4.7",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/lib/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
